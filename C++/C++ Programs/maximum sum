#include<bits/stdc++.h>
using namespace std;

class Solution{
    public:
    int maxSubarraySum(int arr[], int n){
        
      
        int s=0,max_prev=INT_MIN,max_now=0;
        for(int i=0;i<n;i++)
        {
            max_now+=arr[i];
            if(max_prev<max_now)
            {
                max_prev=max_now;
            }
            if(max_now<0)
            max_now=0;
        }
        return max_prev;
    }
};


int main()
{
    int t,n;
    
    cin>>t; 
    while(t--) 
    {
        
        cin>>n;
        
        int a[n];
        
        for(int i=0;i<n;i++)
            cin>>a[i]; 
            
        Solution ob;
        
        cout << ob.maxSubarraySum(a, n) << endl;
    }
}
